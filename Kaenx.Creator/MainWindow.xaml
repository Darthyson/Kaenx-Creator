<Window x:Class="Kaenx.Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kaenx.Creator"
        mc:Ignorable="d"
        Title="Kaenx Creator" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Projekt">
                <MenuItem Header="Neu" Click="ClickNew"/>
                <MenuItem Header="Öffnen" Click="ClickOpen" />
                <MenuItem x:Name="MenuSave" IsEnabled="False" Header="Speichern" Click="ClickSave" />
                <MenuItem x:Name="MenuClose" IsEnabled="False" Header="Schließen" />
            </MenuItem>
            <MenuItem x:Name="MenuDevices" IsEnabled="False" Header="Geräte" Click="ClickOpenDevice" ItemsSource="{Binding General.Devices}">
                <MenuItem.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </MenuItem.ItemTemplate>
            </MenuItem>
            <MenuItem x:Name="MenuPublish" IsEnabled="False" Header="Veröffentlichen">
                <MenuItem Header="Für ETS" />
                <MenuItem Header="Für Kaenx" IsEnabled="False" />
            </MenuItem>
        </Menu>

        <TabControl x:Name="TabsEdit" Grid.Row="1" Margin=" 0 10 0 0" IsEnabled="False">
            <TabItem Header="Allgemein">
                <StackPanel>
                    <HeaderedContentControl Header="Manufacturer ID">
                        <TextBox Text="{Binding General.ManufacturerId}" MaxLength="4" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Header="Projekt Name">
                        <TextBox Text="{Binding General.ProjectName}" />
                    </HeaderedContentControl>
                </StackPanel>
            </TabItem>

            <TabItem Header="Geräte">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Content="Hinzufügen" Click="ClickAddDevice" />

                    <ListView x:Name="DeviceList" Grid.Row="1" ItemsSource="{Binding General.Devices}" DisplayMemberPath="Alias" />

                    <StackPanel Grid.Column="1" Grid.RowSpan="2" DataContext="{Binding ElementName=DeviceList, Path=SelectedItem}">
                        <StackPanel.Resources>
                            <Style TargetType="HeaderedContentControl">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                        </StackPanel.Resources>
                        <HeaderedContentControl Header="Interner Name">
                            <TextBox Text="{Binding Alias, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="Name">
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="Ordernumber">
                            <TextBox Text="{Binding OrderNumber}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="Busstrom">
                            <TextBox Text="{Binding BusCurrent}" />
                        </HeaderedContentControl>

                        <CheckBox IsChecked="{Binding IsRailMounted}" Content="Ist ein REG" />
                        <CheckBox IsChecked="{Binding HasApplicationProgramm}" Content="Hat ein Applikationsprogramm" />
                        <CheckBox IsChecked="{Binding HasIndividualAddress, Mode=TwoWay}" Content="Hat eine Individuelle Adresse" />

                        <ComboBox IsEnabled="{Binding HasApplicationProgramm, Mode=TwoWay}" SelectedItem="{Binding App}" ItemsSource="{Binding General.Applications, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" DisplayMemberPath="Name" />
                    </StackPanel>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
