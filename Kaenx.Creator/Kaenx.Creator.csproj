  <ItemGroup>
    <None Update="Data\knx_master.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Data\datapoints.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
