<Window x:Class="Kaenx.Creator.Controls.ProdVParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        Title="Eingabe" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Icon="/FileLogo.ico">
    <Grid Margin="15" FocusManager.FocusedElement="{Binding ElementName=AnswerBox}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="{svgc:SvgImage Source=/Assets/Images/General/PromptDialog.svg, AppName=Kaenx.Creator}" Width="32" Height="32" Grid.RowSpan="4" Margin="20,0" />

        <TextBlock Grid.Column="1" x:Name="Question" Text="Frage:" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="AnswerBox" />

        <ComboBox x:Name="modList" Grid.Row="2" Grid.Column="1" DisplayMemberPath="Id" SelectedValuePath="Start" Margin="0 2" />

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </StackPanel>
    </Grid>
</Window>